<main class="container pt-2 pb-0">
  {{> alert}}
  <div class="row">
    {{#ifEqual path '/signin'}}
      {{> signUp}}
      {{> signIn}}
    {{/ifEqual}}

    {{#ifEqual path '/signup'}}
      {{> signUp}}
      {{> signIn}}
    {{/ifEqual}}
 
    {{#ifEqual path '/signin/checkout'}}
      {{> signIn}}
      {{> signUp}}
    {{/ifEqual}}


  </div>
</main>