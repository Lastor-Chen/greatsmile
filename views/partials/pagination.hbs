<div class="row">
  <nav>
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="{{queryString}}page={{prev}}">
          <i class="fas fa-chevron-left"></i>
        </a>
      </li>
      {{#each pagesArray}}
        {{#ifEqual this ../page}}
          <li class="page-item active">
            <a class="page-link" href="{{../queryString}}page={{this}}">{{this}}</a>
          </li>
        {{else}}
          <li class="page-item">
            <a class="page-link" href="{{../queryString}}page={{this}}">{{this}}</a>
          </li>
        {{/ifEqual}}
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="{{queryString}}page={{next}}">
          <i class="fas fa-chevron-right"></i>
        </a>
      </li>
    </ul>
  </nav>
</div>